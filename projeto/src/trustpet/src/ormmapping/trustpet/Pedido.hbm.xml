<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="trustpet.Pedido" table="Pedido" lazy="false">
		<id name="id" column="Id" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="petsitter" column="PetsitterUtilizadorEmail" class="trustpet.Petsitter" cascade="save-update,lock" unique="true" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<many-to-one name="dono" column="DonoUtilizadorEmail" class="trustpet.Dono" cascade="save-update,lock" unique="true" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="data" column="Data" type="string" length="255" not-null="false" lazy="false"/>
		<property name="preco" column="Preco" type="float" not-null="true" lazy="false"/>
		<set name="ORM_Animais" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="PedidoId" not-null="true"/>
			<one-to-many class="trustpet.Animal"/>
		</set>
		<set name="ORM_Servicos" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="PedidoId" not-null="true"/>
			<one-to-many class="trustpet.Servico"/>
		</set>
	</class>
</hibernate-mapping>
